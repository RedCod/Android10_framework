<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_White"
    android:orientation="horizontal" >

    <!-- using by ListView in ActivityAddScheduler.java and by this CustomListAdapter_AddScheduler.java-->
    <LinearLayout
        android:id="@+id/linearLayout_Item"
        android:layout_width="308dp"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="2dp"
            android:text="13:40"
            android:textStyle="bold"
            android:textColor="@color/color_Black"
            android:textAppearance="?android:attr/textAppearanceMedium"
             />

        <TextView
            android:id="@+id/textView_ItemDescribtion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_ItemDescribtion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="51dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switchButton_ONorOFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10dp" />

    </LinearLayout>

</LinearLayout>