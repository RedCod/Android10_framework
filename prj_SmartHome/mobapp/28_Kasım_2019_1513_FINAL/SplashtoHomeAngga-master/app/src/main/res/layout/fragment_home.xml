<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.trident.smart.FragmentHome">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        android:background="@color/color_White1"
        tools:layout_editor_absoluteY="97dp" >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner_family"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="#000"
                    android:singleLine="true"
                    android:textColor="#0E1843"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button_AddDevices"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/add_black"
                    android:textAllCaps="false" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:background="@color/color_White1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/color_White1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_homelocation_sun"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/sun1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0dp"
                android:background="@color/color_White1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_homelocation_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="Eve Hoşgeldiniz."
                    android:textStyle="bold"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/textView_homelocation_welcome_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="Ev konumunuzu ayarlayın,daha fazla bilgi >\n alın"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalscrollview_scenarios"
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_marginTop="130dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.2">
                    <LinearLayout
                        android:id="@+id/linearlayout_scenarios_items"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/color_White1"
                        android:orientation="horizontal">
                        <!-- we don't need static Button for scenario. Because we add dinamic(getting from DB) Button in FragmentHome.java file instead of below xmlButton.-->
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_rooms"
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:background="@color/color_White1"
            app:tabTextAppearance="@style/CustomTextAppearanceTab"
            android:layout_marginTop="200dp">
            <!-- we don't need static TabLayout Items. Because we add dinamic(getting from DB) Items in FragmentHome.java file.   -->
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="341dp"
            android:layout_height="275dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="235dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/color_White1"
            app:layout_constraintBottom_toBottomOf="@id/tablayout_rooms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="41dp"
            android:layout_height="30dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="200dp"
            android:background="@color/color_White1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_management_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp"
                android:text="..."
                android:textSize="30dp" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
