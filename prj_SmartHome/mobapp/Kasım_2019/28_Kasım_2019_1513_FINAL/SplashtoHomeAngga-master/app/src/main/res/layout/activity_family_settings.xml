<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_White1"
    tools:context="com.example.trident.smart.ActivityAddFamily">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="406dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:background="@color/color_White"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.000"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp">

        <LinearLayout
            android:id="@+id/linearLayout_Back"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_Back"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/back"
                android:textAllCaps="false" />
        </LinearLayout>

        <TextView
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="223dp"
            android:layout_height="match_parent"
            android:text="@string/family_settings"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold" />  <!--style="?android:attr/borderlessButtonStyle" -->
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView_Based"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="45dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout_Based"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/family_members"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout16"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <LinearLayout
                android:id="@+id/linearLayout_MembersBased"
                android:layout_width="406dp"
                android:layout_height="173dp"
                android:layout_marginTop="36dp"
                android:background="@color/color_White"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout16"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="2dp">

                <ListView
                    android:id="@+id/listView_Members"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="406dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_White"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_MembersBased"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp">

                <Button
                    android:id="@+id/button_GoToAddMember"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="@string/add_member"
                    android:textAllCaps="false"
                    android:textColor="@color/colorButton_Login"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_White"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp">

                <Button
                    android:id="@+id/button_RemoveFamily"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/remove_family"
                    android:textAllCaps="false"
                    android:textColor="@color/colorButton_Login"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout16"
                android:layout_width="395dp"
                android:layout_height="123dp"
                android:background="@color/color_White"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_label_FamilyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/family_name"
                        android:textColor="@color/color_Black" />

                    <TextView
                        android:id="@+id/textView_FamilyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="textView"
                        android:textAlignment="textEnd" />

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_FamilyName_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginTop="3dp"
                            android:padding="6dp"
                            android:src="@drawable/arrow_more" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_label_RoomManagement"
                        android:layout_width="43dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/room_management"
                        android:textColor="@color/color_Black" />

                    <TextView
                        android:id="@+id/textView_RoomCountAndGoToRoomManagement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="textView"
                        android:textAlignment="textEnd" />

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_RoomManagement_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginTop="3dp"
                            android:padding="6dp"
                            android:src="@drawable/arrow_more" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_label_FamilyLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/family_location"
                        android:textColor="@color/color_Black" />

                    <TextView
                        android:id="@+id/textView_SetFamilyLocationA"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_set_family_location" />

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_SetFamilyLocationA_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginTop="3dp"
                            android:padding="6dp"
                            android:src="@drawable/arrow_more" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
