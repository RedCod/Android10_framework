<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_White1"
    tools:context="com.example.trident.smart.ActivitySettings">
    <LinearLayout
        android:id="@+id/linearLayout_title"
        android:layout_width="406dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:background="@color/color_White"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.000"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp">
        <LinearLayout
            android:id="@+id/linearLayout_Back"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:gravity="center">
            <Button
                android:id="@+id/button_Back"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/back"
                android:textAllCaps="false" />
        </LinearLayout>
        <TextView
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="249dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold" />  <!-- text value set in the class --><!--style="?android:attr/borderlessButtonStyle" -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="395dp"
        android:layout_height="111dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_White"
        android:baselineAligned="false"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_title"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp">
        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/sound"
                android:textColor="@color/color_Black"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/switchButton_Sound"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:padding="6dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/push_notification"
                android:textColor="@color/color_Black"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/switchButton_PushNotification"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:checked="true"
                    android:padding="6dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:background="@color/color_White"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="63dp">
        <LinearLayout
            android:id="@+id/linearLayout_About"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/about"
                android:textColor="@color/color_Black"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="3dp"
                    android:padding="6dp"
                    android:src="@drawable/arrow_more" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_White"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp">
        <LinearLayout
            android:id="@+id/linearLayout_ClearCache"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/clear_cache"
                android:textColor="@color/color_Black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/textView_CacheSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0KB"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="3dp"
                    android:padding="6dp"
                    android:src="@drawable/arrow_more" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_LogOut"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_White"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:text="@string/logout"
            android:textStyle="bold"
            android:textSize="16dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
